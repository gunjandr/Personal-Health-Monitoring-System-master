<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin"
    android:background="@drawable/resetbg"
    >

    <EditText
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/email"
        android:textColor="#ffffff"
        android:alpha="0.60"
        android:drawableLeft="@drawable/mailicon"
        android:background="@drawable/rounded_edtxt"
        android:textAlignment="center"
        android:textColorHint = "#ffffff"
        android:fontFamily="sans-serif"
        android:hint = "Enter Email ID"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textview1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:inputType="textPassword"
        android:id = "@+id/enterpwd"
        android:textColor="#ffffff"
        android:alpha="0.60"
        android:background="@drawable/rounded_edtxt"
        android:textAlignment="center"
        android:textColorHint = "#ffffff"
        android:fontFamily="sans-serif"
        android:drawableLeft="@drawable/pwdicon"
        android:hint = "Enter password"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:layout_alignTop="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_marginTop="64dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/newpwd"
        android:textColor="#ffffff"
        android:alpha="0.60"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/pwdicon"
        android:background="@drawable/rounded_edtxt"
        android:textAlignment="center"
        android:textColorHint = "#ffffff"
        android:fontFamily="sans-serif"
        android:hint = "Enter new Password"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:height="35dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/enterpwd"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
    <EditText
        android:layout_width = "wrap_content"
        android:height="35dp"
        android:layout_height = "wrap_content"
        android:id = "@+id/confirmpwd"
        android:textColor="#ffffff"
        android:alpha="0.60"
        android:drawableLeft="@drawable/pwdicon"
        android:background="@drawable/rounded_edtxt"
        android:textAlignment="center"
        android:textColorHint = "#ffffff"
        android:fontFamily="sans-serif"
        android:inputType="textPassword"
        android:hint = "Confirm Password"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/newpwd"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.60"
        android:focusable="true"
        android:text="Password Must Contain a number, a special character and be alphanumeric only."
        android:textAllCaps="true"
        android:textColorHighlight="#ff7eff15"
        android:textColor="#000000" />




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go back to login"
        android:id="@+id/button2"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-smallcaps"
        android:alpha="0.85"
        android:background="@drawable/rounded_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/button3"
        android:textColor="#ffffff"
        android:alpha="0.85"
        android:background="@drawable/rounded_button"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_above="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:layout_alignParentEnd="true" />
    <!--
        <TextView android:text = "What is the name of your first pet?" android:layout_width="wrap_content"
            android:layout_height = "wrap_content"
            android:id = "@+id/textview1"
            android:textSize = "25dp"
            android:layout_below="@+id/textview"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    -->

</RelativeLayout>
